  "version": "2.0.0",
  "author": {
    "name": "Ivan Lutsenko",
    "email": "ivan@lutsenko.com",
    "url": "https://github.com/IvanLutsenko"
  },
  "keywords": ["notifications", "macos", "locale", "i18n", "translate"],
  "license": "MIT",
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/notify.sh"
          }
        ]
      }
    ]
  }
}
